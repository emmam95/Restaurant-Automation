<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="meghankh.loginwindow.ViewEmployeeInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View Employee Info"
        android:id="@+id/pageheader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="First Name:  "
        android:id="@+id/firstLabel"
        android:textSize="20dp"
        android:layout_below="@+id/pageheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstName"
        android:layout_toRightOf="@+id/firstLabel"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/pageheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Name:  "
        android:id="@+id/lastLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/firstLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastName"
        android:layout_toRightOf="@+id/lastLabel"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/firstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SSN:  "
        android:id="@+id/ssnLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/lastLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ssn"
        android:layout_toRightOf="@+id/ssnLabel"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/lastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone Number:  "
        android:id="@+id/phoneLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/ssnLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumber"
        android:layout_below="@+id/ssn"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/phoneLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address:  "
        android:id="@+id/addressLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/phoneLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:phoneNumber="true"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/address"
        android:layout_toRightOf="@+id/addressLabel"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/phoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:  "
        android:id="@+id/passwordLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_below="@+id/addressLabel"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="#ff4fffa8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_toRightOf="@+id/passwordLabel"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_below="@+id/lookupButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminate"
        android:id="@+id/fireButton"
        android:layout_below="@+id/passwordLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lookupFirstName"
        android:textSize="20dp"
        android:hint="First Name"
        android:layout_below="@+id/fireButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lookupLastName"
        android:textSize="20dp"
        android:layout_below="@+id/lookupFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Last Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look Up Employee"
        android:id="@+id/lookupButton"
        android:layout_below="@+id/lookupLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Terminated"
        android:id="@+id/terminatedMessage"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffff6856" />

</RelativeLayout>
