<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="meghankh.loginwindow.TipCalculatorActivity"
    android:id="@+id/RelativeLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total with Tax:"
        android:id="@+id/totalWTaxLabel"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tip:"
        android:id="@+id/tipAmountLabel"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/totalWTaxLabel"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Tip"
        android:id="@+id/calculateTipButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/totalLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final Total:"
        android:layout_marginTop="20dp"
        android:id="@+id/totalLabel"
        android:layout_below="@+id/tipAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/totalWTax"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/tipAmount"
        android:layout_alignTop="@+id/tipAmountLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/finalAmount"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/totalLabel"
        android:layout_toRightOf="@+id/totalLabel"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/totalLabel"
        android:width="200dp" />

</RelativeLayout>
